{{ 'flickity.css' | asset_url | stylesheet_tag }}
{{ 'flickity.js' | asset_url | script_tag }}

{%- liquid
  assign products_to_display = section.settings.collection.all_products_count

  if section.settings.collection.all_products_count > section.settings.products_to_show
    assign products_to_display = section.settings.products_to_show
    assign more_in_collection = true
  endif 
-%}

<h2> {{ section.settings.title }} </h2>


<div class="featured-cards">
  <div class="carousel">
   
    {%- for product in section.settings.collection.products limit: section.settings.products_to_show -%}

    <div class="carousel-cell">
      <a href="{{ product.url }}">
        {% render 'card-product',
        card_product: product,
        media_aspect_ratio: section.settings.ratio,
        show_secondary_image: section.settings.show_secondary_image,
        show_vendor: section.settings.show_vendor,
        show_rating: section.settings.show_rating
      %}

      </a>
    </div>
    
    {%- endfor -%}

  </div>
</div>

{%- if section.settings.show_view_all and more_in_collection -%}

<div class="center collection__view-all{% if section.settings.swipe_on_mobile %} small-hide medium-hide{% endif %}">
  <a href="{{ section.settings.collection.url }}"
    class="button"
    aria-label="{{ 'sections.edit-slider.view_all_label' | t: collection_name: section.settings.collection.title }}"
  >
    {{ 'sections.featured_collection.view_all' | t }}
  </a>
</div>

{%- endif -%}

<script>
  var elem = document.querySelector('.featured-cards .carousel');
  var flkty = new Flickity( elem, {
    contain: true,
    imagesLoaded: true,
    lazyLoad: 2,
    wrapAround: true,
    pageDots: true,
  });
</script>





{% schema %}
{
  "name": "Shop the Edit Slider",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "Shop the Edit",
      "label": "Section heading"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "choose collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 4,
      "max": 24,
      "step": 1,
      "default": 4,
      "label": "Number of products to show"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "default": true,
      "label": "Add View all button"
    },
    {
      "type": "header",
      "content": "settings"
    },
    {
      "type": "select",
      "id": "ratio",
      "options": [
        {
          "value": "adapt",
          "label": "adapt"
        },
        {
          "value": "portrait",
          "label": "portrait"
        },
        {
          "value": "square",
          "label": "square"
        }
      ],
      "default": "square",
      "label": "Image Ratio"
    },
    {
      "type": "checkbox",
      "id": "show_secondary_image",
      "default": false,
      "label": "Show secondary image?"
    }
  ],
  "presets": [
    {
      "name": "sections.edit-slider.presets.name"
    }
  ]
}
{% endschema %}